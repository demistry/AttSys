<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <TextView
            android:id="@+id/text_courses_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_circle_course_text_bg"
            android:text="E"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="32sp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Systems"
            android:textColor="#716151"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/text_courses_avatar"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_toRightOf="@id/text_courses_avatar" />
        <TextView
            android:id="@+id/course_code_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_name"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#716151"
            android:layout_toEndOf="@id/text_courses_avatar"
            android:textStyle="bold"
            android:text="EEE 533"
            android:textAllCaps="true"
            android:layout_toRightOf="@id/text_courses_avatar" />
        <TextView
            android:id="@+id/course_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#716151"
            android:textStyle="italic"
            android:layout_toEndOf="@id/text_courses_avatar"
            android:layout_marginTop="8dp"
            android:layout_below="@id/course_code_list"
            android:text="3 credits"
            android:layout_toRightOf="@id/text_courses_avatar" />
    </RelativeLayout>



</android.support.v7.widget.CardView>